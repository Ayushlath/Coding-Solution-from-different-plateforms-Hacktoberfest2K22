#include <iostream>
using namespace std;

int main() {
	
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n];
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    int count =0;
	    for(int i=0;i<n-1;i++){
            if(a[i]!=a[i+1] && i>=1 && a[i]!=a[i-1]){
	           count++;
	        }
	        else if(a[i]!=a[i+1]){
	            count+=2;
	        }
	    }
	    cout<<count<<endl;
	}
	return 0;
}
